<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sierra</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sierra.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar">
        <ul>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index"><img class="navbar-icon" src="~/css/media/valvelogo.jpg" /></a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
            <li>
                <a asp-area="" asp-controller="About" asp-action="Index">About</a>
            </li>
            <li>
                <a asp-area="" asp-controller="OurServices" asp-action="Index">OurServices</a>
            </li>
            <li class="navbar-bmemployee">
                <a class="navbar-bmemployee-a" asp-area="" asp-controller="BMEmployee" asp-action="Index">BMEmployee</a>
            </li>
        </ul>
        <hr class="home-hr" />
    </nav>
    
    <div>
        <main>
            <div class="background-image"></div>
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div>
            <hr class="home-hr-footer">
            &copy; 2023 - Sierra - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
